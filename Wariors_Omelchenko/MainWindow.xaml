<Window x:Class="Wariors_Omelchenko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wariors_Omelchenko"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid
         Background="#FF424242">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border
          BorderBrush="Black"
          BorderThickness="1"
          Margin ="10"
          Background="#FFFDFDFD"
          MouseDown="Attack">

            <Grid>
                <Image
                    Margin="10,10,10.2,185.4"
                    Source="image/Doom-Slayer.png"/>
                <Label
                    Content="Doom Slayer"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="10, 0, 0, 160"
                    FontWeight="Bold"/>
                <Label
                    x:Name="playerHealth"
                    Content="Жизненные показатели: 100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10, 0, 0, 130"/>
            </Grid>
        </Border>
        <Border
            BorderBrush="Black"
            BorderThickness="1"
            Margin="10"
            Background="#FFFDFDFD"
		    MouseDown="AttackHavy"
            Grid.Column="1"
            >

            <Grid>
                <Image
                    x:Name="enemyImage"
                    Margin="10,10,10.2,185.4"
                    Source="image/Dread_Knight.png"/>
                <Label
                   Content="Демон"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="10, 0, 0, 160"
                   FontWeight="Bold"/>
                <Label
                    x:Name="enemyHealth"
                    Content="Жизненные показатели: 100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10, 0, 0, 130"/>
            </Grid>
        </Border>

    </Grid>
</Window>
